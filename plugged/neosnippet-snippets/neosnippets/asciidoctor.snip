# See https://asciidoctor.org/docs/asciidoc-syntax-quick-reference/

include asciidoc.snip


snippet highlight-rouge
alias hirouge
abbr source-highlighter: rouge
options head
    :source-highlighter: rouge$0

snippet highlight-pygments
alias hipygments
abbr source-highlighter: pygments
options head
    :source-highlighter: pygments$0

snippet highlight-highlight.js
alias hihighlight.js
abbr source-highlighter: highlight.js
options head
    :source-highlighter: highlight.js$0
