set previewer ~/.vim/test/keep/lf/lf_previewer.sh

cmd mkdir push %mkdir<space>
map i $bat --style=plain --color=always --paging=auto $f
map <c-j> shell
map <enter> read
map ; read

cmd vdiff ${{
  vdf $fx
}}

cmd wdiff $bcp $fx

map d
map dd cut
map dv vdiff
map dc wdiff
map du ${{
  [ -d $f  ] && ncdu $f || ncdu $(dirname $f)
}}
map dD delete
map <delete> delete


cmd on-cd &{{
    export STARSHIP_SHELL=
    fmt="$(starship prompt)"
    lf -remote "send $id set promptfmt \"$fmt\""
}}

cmd on-select &{{
    lf -remote "send $id set statfmt \"$(eza -ld --color=always "$f")\""
}}

cmd fzf_search ${{
    RG_PREFIX="rg --column --line-number --no-heading --color=always --smart-case "
    res="$(
        FZF_DEFAULT_COMMAND="$RG_PREFIX ''" \
            fzf --bind "change:reload:$RG_PREFIX {q} || true" \
            --ansi --layout=reverse --header 'Search in files' \
            | cut -d':' -f1 | sed 's/\\/\\\\/g;s/"/\\"/g'
    )"
    [ -n "$res" ] && lf -remote "send $id select \"$res\""
}}
map gs :fzf_search
map gi $lg

cmd copy_to_clip &{{
  if command -v clip.exe >& /dev/null; then
    echo "$fx" | clip.exe
  fi
}}

map gy :copy_to_clip


cmd fzf_jump ${{
    res="$(fd | fzf --reverse --header='Jump to location')"
    if [ -n "$res" ]; then
        if [ -d "$res" ]; then
            cmd="cd"
        else
            cmd="select"
        fi
        res="$(printf '%s' "$res" | sed 's/\\/\\\\/g;s/"/\\"/g')"
        lf -remote "send $id $cmd \"$res\""
    fi
}}
map <c-f> :fzf_jump


# open operations
map oo &gvi $f
map oc $code $f
map on &gvi :N $f
map ov $vim $f
map oe $nvim $f
map oi $gvi -nvim $f
map oz &7zFM.exe $f

map c
map cc rename
map cl clear

# map all common operations to a (for action) prefix
map ap paste
map ay copy
map av invert
map ad cut
map ac clear
map aD delete
map ar rename
