snippet frame "frame"
\begin{frame}
\frametitle{${1:<+title+>}}
${2}
\end{frame}
endsnippet

snippet block "add a block"
\begin{block}{${1:<+block title+>}}
${2:<+block text+>}
\end{block}
endsnippet

snippet uncover "add uncover"
\uncover<${1:i-}>
{
  ${2:<+%uncover text+>}
}
endsnippet

snippet reff "reference" w
(\ref{${1:<+ref+>}})${0:<++>}
endsnippet

snippet ref "reference" w
\ref{${1:<+ref+>}}${0:<++>}
endsnippet

snippet mcol "multicolumn"
\multicolumn{${1:<+ncols+>}}{${2:<+aligment+>}}{${3:<+text+>}}${0:<++>}
endsnippet

snippet "be(gin)?( (\S+))?" "begin{} / end{}" !br
\begin{${1:`!p
snip.rv = match.group(3) if match.group(2) is not None else "something"`}}
	${2:${VISUAL}}
\end{$1}$0
endsnippet

